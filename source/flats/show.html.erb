<% flat = data.flats[owner] %>
<% info = data.info[owner] %>

<div class="header-flat">
  <div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-1">
          <div class="header-flat-details">
            <div class="header-flat-owner  text-center">
              <img src="https://kitt.lewagon.com/placeholder/users/<%= flat.name %>" class="img-circle" width="80" alt="<%= flat.name %>" />
              <p><%= flat.name %></p>
            </div>
            <div class="header-flat-name">
              <h1><%= flat.description %></h1>
              <p><%= flat.city_name %></p>
              <p class="rating">
                <% for i in 0...flat.rating do %>
                  <i class="fa fa-star" style="color: #ffb400"></i>
                <% end %>
                <% for i in 0...5-flat.rating do %>
                  <i class="fa fa-star" style="color: #cacccd"></i>
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4">
          <form action="#" >
            <h4>Book this flat</h3>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin" id="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
          </form>
      </div>
    </div>
  </div>
</div>

<div id="flat-description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p>
          info.about
        </p>

        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:  <strong><%=info.accommodates%></strong></li>
              <li>Bathrooms:  <strong><%=info.bathrooms%></strong></li>
              <li>Bed type:  <strong><%=info.bed_type%></strong></li>
              <li>Bedrooms:  <strong><%=info.bedrooms%></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Beds: <strong><%=info.beds%></strong></li>
              <li>Property type: <strong><%=info.property_type%></strong></li>
              <li>Room type: <strong><%=info.room_type%></strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            Amenities
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <% if info.kitchen == true %>
              <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
              <% end %>
              <% if info.wifi == true %>
              <li><i class="fa fa-wifi"></i><strong>Wifi</strong></li>
              <% end %>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
            <% if info.tv == true %>
              <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
            <% end %>
            <% if info.welcome == true %>
              <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
